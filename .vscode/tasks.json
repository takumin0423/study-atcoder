{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with gcc",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++23",
        "-gdwarf-3",
        "${fileDirname}/main.cpp",
        "-o",
        "${fileDirname}/main",
        "--debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
